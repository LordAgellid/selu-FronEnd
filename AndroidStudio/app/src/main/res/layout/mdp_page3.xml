<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_jewel">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="202dp"
            android:layout_height="219dp"
            android:fontFamily="@font/inter_bold"
            android:text="Mot de passe oublié"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="198dp"
            android:layout_height="59dp"
            android:fontFamily="@font/inter"
            android:text="Plus qu’un petit pas. Veuillez entrer votre nouveau mot de passe."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <EditText
            android:id="@+id/nvxMdp1"
            android:layout_width="275dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/round_rectangle_shape"
            android:backgroundTint="#FFFEFE"
            android:drawableLeft="@drawable/icon_temp"
            android:drawablePadding="11dp"
            android:fontFamily="@font/inter"
            android:hint="@string/mot_de_passe1"
            android:inputType="text|textPassword|textEmailAddress"
            android:letterSpacing="0.0005"
            android:paddingLeft="16dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textColorHint="@color/green_jewel"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/nvxMdp2"
            android:layout_width="275dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_rectangle_shape"
            android:backgroundTint="#FFFEFE"
            android:drawableLeft="@drawable/icon_temp"
            android:drawablePadding="11dp"
            android:fontFamily="@font/inter"
            android:hint="@string/confirmer_mot_de_passe1"
            android:inputType="text|textPassword|textEmailAddress"
            android:letterSpacing="0.0005"
            android:paddingLeft="16dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textColorHint="@color/green_jewel"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nvxMdp1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middle1">

        <Button
            android:id="@+id/btnsendModif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangle_shape"
            android:fontFamily="@font/inter"
            android:letterSpacing="0.0005"
            android:paddingLeft="55dp"
            android:paddingTop="10dp"
            android:paddingRight="55dp"
            android:paddingBottom="10dp"
            android:text="@string/r_initialiser"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/green_jewel"
            android:textSize="16sp"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="12dp"
            app:iconGravity="textStart"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>