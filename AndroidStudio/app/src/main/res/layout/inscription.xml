<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inscription"
    android:background="@color/green_jewel">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headlineInscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/nouveau"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inscription_subheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/creez_votre_compte_selu"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headlineInscription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <EditText
            android:id="@+id/nom_input"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/round_rectangle_shape"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/inputs_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter"
            android:hint="@string/nom"
            android:importantForAutofill="no"
            android:inputType="text"
            android:letterSpacing="0.0005"
            android:paddingLeft="16dp"
            android:paddingTop="14dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/green_jewel"
            android:textColorHint="@color/gum_leaf"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/prenom_input"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_rectangle_shape"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/inputs_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter"
            android:hint="@string/prenom"
            android:importantForAutofill="no"
            android:inputType="text"
            android:letterSpacing="0.0005"
            android:paddingLeft="16dp"
            android:paddingTop="14dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/green_jewel"
            android:textColorHint="@color/gum_leaf"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nom_input"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/courriel_input"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_rectangle_shape"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/inputs_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter"
            android:hint="@string/adresse_courriel"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:letterSpacing="0.0005"
            android:paddingLeft="16dp"
            android:paddingTop="14dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textColor="@color/green_jewel"
            android:textColorHint="@color/gum_leaf"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prenom_input"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/mdp_input"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_rectangle_shape"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/inputs_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter"
            android:hint="@string/mot_de_passe"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:letterSpacing="0.0005"
            android:paddingLeft="16dp"
            android:paddingTop="14dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/green_jewel"
            android:textColorHint="@color/gum_leaf"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/courriel_input"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/confirmer_mdp_input"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/round_rectangle_shape"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/inputs_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter"
            android:hint="@string/confirmer_mot_de_passe"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:letterSpacing="0.0005"
            android:paddingLeft="16dp"
            android:paddingTop="14dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/green_jewel"
            android:textColorHint="@color/gum_leaf"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mdp_input"
            tools:ignore="TextContrastCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_inscription"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangle_shape"
            android:fontFamily="@font/inter"
            android:paddingLeft="55dp"
            android:paddingTop="10dp"
            android:paddingRight="55dp"
            android:paddingBottom="10dp"
            android:text="@string/s_inscrire"
            android:textColor="@color/green_jewel"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inscription_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="@string/vous_detenez_deja_un_compte_selu"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_inscription" />

        <TextView
            android:id="@+id/lienVersConnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/connectez_vous"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inscription_action_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>