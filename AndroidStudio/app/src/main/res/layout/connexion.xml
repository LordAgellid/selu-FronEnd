<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_jewel">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="468dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="Vous n'avez pas de compte Selu ?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConnexion" />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/createAccount"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mdpOublier"
        android:layout_width="473dp"
        android:layout_height="19dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/forgotpass"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnConnexion"
        android:layout_width="177dp"
        android:layout_height="59dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/round_rect_shape"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/inter"
        android:letterSpacing="0.0005"
        android:text="Connexion"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/green_jewel"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:iconGravity="textStart"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mdpOublier"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/inter_bold"
        android:text="Bienvenue"
        android:textAlignment="center"
        android:textColor="#FFFFFF"

        android:textSize="75sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:text="Connectez-vous Ã  votre compte"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_marginBottom="76dp"
        android:layout_weight="1"
        android:background="@drawable/round_rect_shape"
        android:backgroundTint="#FFFEFE"
        android:drawableLeft="@drawable/icon_temp"
        android:drawablePadding="11dp"
        android:fontFamily="@font/inter"
        android:hint="Adresse courriel"
        android:inputType="text|textEmailAddress"
        android:letterSpacing="0.0005"
        android:paddingLeft="16dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/green_jewel"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/mdpOublier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.73" />

    <View
        android:id="@+id/ligne2"
        android:layout_width="105dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/btnGoogle" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter"
        android:text="OU"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoogle" />

    <View
        android:id="@+id/ligne1"
        android:layout_width="105dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/btnGoogle" />

    <EditText
        android:id="@+id/password"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:background="@drawable/round_rect_shape"
        android:backgroundTint="#FFFEFE"
        android:drawableLeft="@drawable/icon_temp"
        android:drawablePadding="11dp"
        android:fontFamily="@font/inter"
        android:inputType="textPassword"
        android:letterSpacing="0.0005"
        android:paddingLeft="16dp"
        android:password="true"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="aaaaaaaaaaa"
        android:textAlignment="textStart"
        android:textColor="@color/green_jewel"
        android:textColorHint="@color/green_jewel"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/mdpOublier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail"
        app:layout_constraintVertical_bias="0.619" />

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/round_rect_shape"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/inter"
        android:letterSpacing="0.0005"
        android:text="Continuer avec Google"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/green_jewel"
        android:textSize="16sp"
        app:icon="@drawable/ic_google__g__logo"
        app:iconGravity="textStart"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>