<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_jewel">


    <EditText
        android:id="@+id/nvxMdp1"
        android:layout_width="275dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:background="@drawable/round_rect_shape"
        android:backgroundTint="#FFFEFE"
        android:drawableLeft="@drawable/icon_temp"
        android:drawablePadding="11dp"
        android:fontFamily="@font/inter"
        android:hint="Adresse courriel"
        android:inputType="text|textEmailAddress"
        android:letterSpacing="0.0005"
        android:paddingLeft="16dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="@color/green_jewel"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.373" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="202dp"
        android:layout_height="219dp"
        android:fontFamily="@font/inter_bold"
        android:text="Mot de passe oublié"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="27dp" />

    <Button
        android:id="@+id/btnsendVerif"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_rect_shape"
        android:fontFamily="@font/inter"
        android:letterSpacing="0.0005"
        android:text="ENVOYER"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/green_jewel"
        android:textSize="16sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="12dp"
        app:iconGravity="textStart"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nvxMdp1"
        app:layout_constraintVertical_bias="0.636" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter"
        android:text="Entrez votre adresse courriel. Nous vous enverrons un code de vérification."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>